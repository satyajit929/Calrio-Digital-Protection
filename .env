# Application
APP_NAME=SatyaLens API
DEBUG=True

# Database (Local Development)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/satyalens

# Database (Google Cloud SQL - Production)
# DATABASE_URL=postgresql+asyncpg://user:password@/satyalens?host=/cloudsql/project:region:instance
# CLOUD_SQL_CONNECTION_NAME=your-project:us-central1:satyalens-db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id

# AI/ML APIs (Optional)
# HUGGINGFACE_API_KEY=your-huggingface-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Protection Engine
THREAT_DETECTION_THRESHOLD=0.7
AUTO_BLOCK_THRESHOLD=0.9